    <script>
        // Menginisialisasi ikon Lucide
        lucide.createIcons();

        // Logika untuk menu mobile (Hamburger button)
        const menuButton = document.getElementById('menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        menuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
            const icon = menuButton.querySelector('i');
            
            // Ganti ikon menu saat dibuka/ditutup
            if (mobileMenu.classList.contains('hidden')) {
                icon.setAttribute('data-lucide', 'menu');
            } else {
                icon.setAttribute('data-lucide', 'x');
            }
            lucide.createIcons(); // Re-render ikon
        });

        
        // Logika Smooth Scroll untuk semua tautan internal
        const internalLinks = document.querySelectorAll('a[href^="#"]');

        internalLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                // 1. Mencegah aksi default (lompatan instan)
                e.preventDefault();

                // 2. Ambil ID target (e.g., "#tentang")
                const targetId = this.getAttribute('href');
                
                // Cek jika ID target adalah '#' (biasanya link ke atas halaman)
                if (targetId === '#') {
                    window.scrollTo({
                        top: 0,
                        behavior: 'smooth'
                    });
                } else {
                    // 3. Cari elemen target
                    const targetElement = document.querySelector(targetId);
    
                    if (targetElement) {
                        // 4. Lakukan smooth scroll
                        targetElement.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start' 
                        });
                    }
                }


                // 5. Tutup menu mobile setelah klik (jika sedang terbuka)
                if (!mobileMenu.classList.contains('hidden')) {
                    mobileMenu.classList.add('hidden');
                    menuButton.querySelector('i').setAttribute('data-lucide', 'menu');
                    lucide.createIcons();
                }
            });
        });
    </script>
